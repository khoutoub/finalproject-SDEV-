import tkinter as tk
from tkinter import messagebox

class BudgeteerApp:
    def __init__(self, master):
        self.master = master
        self.master.title("Budgeteer")
        self.master.geometry("400x300")

        self.main_window()

    def main_window(self):
        self.frame = tk.Frame(self.master)
        self.frame.pack()

        # Labels
        self.label1 = tk.Label(self.frame, text="Welcome to Budgeteer")
        self.label1.pack()

        self.label2 = tk.Label(self.frame, text="Select an option:")
        self.label2.pack()

        # Buttons
        self.button1 = tk.Button(self.frame, text="Create New Budget", command=self.create_budget)
        self.button1.pack()

        self.button2 = tk.Button(self.frame, text="View Existing Budgets", command=self.view_budgets)
        self.button2.pack()

        self.exit_button = tk.Button(self.frame, text="Exit", command=self.master.quit)
        self.exit_button.pack()

    def create_budget(self):
        # Logic for creating a new budget
        pass

    def view_budgets(self):
        # Logic for viewing existing budgets
        pass

def main():
    root = tk.Tk()
    app = BudgeteerApp(root)
    root.mainloop()

if __name__ == "__main__":
    main()
